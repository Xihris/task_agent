<div class="add_task" style="display: none;">

  <%= form_for :temp_task, :url => {:controller => 'temp_tasks', action: "create", role: 'form'} do |f| %>
	<div class="form-inline">
		<label class="glyphicon glyphicon-calendar btn-lg"> <%= f.text_field :date_start, {:class => 'datepicker ', :placeholder => 'Дата начала'} %></label>   		
		<label class="glyphicon glyphicon-calendar btn-lg"> <%= f.text_field :date_end, {:class => 'datepicker', :placeholder => 'Дата окончания'} %></label>
	</div>

	<br>

	<div>
		<%= f.text_area :companys, rows: 1, class: 'form-control input-lg', placeholder: 'Несколько компаний  через ";"' %>
	</div>

	<br>

	<div class="form-inline">
		<div class="form-group">
			<label>Пользователи</label>
			<%= f.select :user_id, User.all.map{ |user| [user.name, user.id] }, {:placeholder => ""}, {:class => 'form-control'} %>
		</div>
		
		<div class="form-group">
			<label>Авторы</label>
			<%= f.select :author_id, Author.all.map{ |author| [author.name, author.id] }, {:placeholder => ""}, {:class => 'form-control'} %>
			<div class="author btn btn-sm btn-primary">добавить автора</div>
		</div>
	</div>
	
	<br>
	<div class="block-btn">
		<%= f.submit "Сохранить", class: "btn btn-primary pull-left" %>
	</div>

  <% end %>
</div>