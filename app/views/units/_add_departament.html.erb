<div class="add_departament" style="display: none;">
	<%= form_for :department, :url => {:controller => 'departments', action: "create", role: 'form'} do |f| %>
		<div class="form-inline margin_bottom">
			<%= f.text_field :full_department, {:class => 'form-control department_style', :placeholder => "", :type => 'text'} %>
			<%= f.submit "Сохранить", class: "btn btn-primary", id: "save_dep" %>
		</div>
	<% end %>
</div>