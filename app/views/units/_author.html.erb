<div class="author-tab" style="display: none;">

  <%= form_for :author, :url => {:controller => 'authors', action: "create", role: 'form'} do |f| %>
    <%= f.text_field :name, {:class => 'form-control',:id => 'authors_style_name', :placeholder => 'ФИО', :type => 'text'} %>
    <%= f.text_field :photo, {:class => 'form-control authors_style_photo', :placeholder => 'Фото - url', :type => 'url'} %>

    <div class="form-inline margin_bottom">
      <div class="form-group">
      <label>Департамент:</label>
        <%= f.select :department_id, Department.all.map{ |department| [department.short_department, department.id] }, {:placeholder => ""}, {:class => 'form-control authors_style', :id => 'form_for_reload'} %>
        <%= f.select :department_id, Department.department_select, {:placeholder => ""}, {:class => 'form-control authors_style'} %>
      </div>
      <button type="button" class="btn btn-info color_btn">Добавить департамент</button>
    </div>
    <div class="form-inline margin_bottom">
      <%= f.text_field :phone, {:class => 'form-control authors_style_phone', :placeholder => 'Телефон'} %>
      <%= f.submit "Сохранить инициатора", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>