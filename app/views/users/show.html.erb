<div class="container">
	<table class="table table-condensed">
		<thead>
			<tr>
				<th>Компания</th>
				<th>Дата завершения</th>
				<th>Инициатор</th>
				
			</tr>
		</thead>
<tbody>
<% @units.each do |unit| %>
	<% @date_result = (unit.date_end - Date.today).to_i %>
	
	<tr class=<%= color %>>
		<td><%= unit.unit %></td>
		<td><%= l unit.date_end, format: :long %></td>
		<td><%= link_to unit.author.name, author_path(unit.author_id) %></td>
		<td><%= link_to units_group_complite_path(unit.id_temp_task), :class=> "glyphicon glyphicon-floppy-saved" do %></td>
		<% end %>
		<td><%= link_to '',data: { id_temp_task: unit.id_temp_task } , class: "glyphicon glyphicon-floppy-saved floppy" do %><% end %></td>  
		
	</tr>
<% end %>
	</tbody>
</table>



</div>