<div class="container">
	<div class="row">
		<div class="col-xs-4"></div>
		<div class="col-xs-4 login_form">
			<h2>Вход</h2>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="form-inputs entry_field">
			    <%= f.input :name, required: false, autofocus: true, label: 'Имя' %>
			    <%= f.input :password, required: false, label: 'Пароль' %>
			    <%= f.input :remember_me, label: 'Запомнить меня', as: :boolean if devise_mapping.rememberable? %>
			  </div>

			  <div class="form-actions entry_btn_margin">
			    <%= f.button :submit, "Войти", class: 'btn btn-block entry_btn' %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
		<div class="col-xs-4"></div>
	</div>
</div>